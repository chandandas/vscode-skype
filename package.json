{
    "name": "vscode-skype",
    "displayName": "vscode-skype",
    "description": "Send skype messages from withing vscode code :)",
    "publisher": "riazXrazor",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.39.0"
    },
    "icon": "media/icon.png",
    "galleryBanner": {
        "color": "#000",
        "theme": "dark"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "vscode-skype",
        "skype",
        "messaging",
        "communication"
    ],
    "bugs": {
        "url": "https://github.com/riazXrazor/vscode-skype/issues",
        "email": "formulahendry@gmail.com"
    },
    "homepage": "https://github.com/riazXrazor/vscode-skype/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/riazXrazor/vscode-skype.git"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-skype.getConfig",
                "title": "vscode-skype: Get Config"
            },
            {
                "command": "vscode-skype.setConfig",
                "title": "vscode-skype: Set Config"
            },
            {
                "command": "vscode-skype.sendMessage",
                "title": "vscode-skype: Send Skype Message"
            }
        ],
        "keybindings": [
            {
                "command": "vscode-skype.setConfig",
                "key": "alt+s",
                "mac": "cmd+alt+s"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "vscode-skype configuration",
            "properties": {
                "vscode-skype.configList": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "inner objects",
                        "properties": {
                            "user.username": {
                                "type": "string",
                                "description": "username/phone/email associated with skype account"
                            },
                            "user.pasword": {
                                "type": "string",
                                "description": "password associated with skype account"
                            }
                        }
                    },
                    "default": [],
                    "description": "List of skype accounts in format [{'user.username': 'riaz@optimizeitsystems.com', 'user.password': '12345@abc'}]"
                },
                "vscode-skype.userList": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "inner objects",
                        "properties": {
                            "user.id": {
                                "type": "string"
                            },
                            "user.label": {
                                "type": "string"
                            }
                        }
                    },
                    "default": []
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.39.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    },
    "dependencies": {
        "skype-http": "0.0.15-build.210"
    }
}
